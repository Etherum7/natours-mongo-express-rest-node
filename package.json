{
  "name": "natours",
  "version": "1.0.0",
  "description": "learning mongo node express",
  "main": "app.js",
  
  "scripts": {
    "start": "nodemon",
    "build": "NODE_ENV=production nodemon",
    "eslint": "eslint src/**/*.ts app.ts server.ts",
    "eslint:fix": "eslint --fix src/**/*.ts app.ts server.ts",
    "prettier": "prettier src/**/*.ts app.ts server.ts",
    "prettier:fix": "prettier --write src/**/*.ts app.ts server.ts",
    "prettier:check": "prettier --config .prettierrc --check src/**/*.{ts,css,html} app.ts server.ts"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,css,html} app.ts server.ts": [
      "eslint --fix",
      "git add"
    ]
  },
  "keywords": [
    "mongo",
    "node",
    "express",
    "natours"
  ],
  "author": "hvs.231918@gmail.com",
  "license": "ISC",
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "eslint": "7.27.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-prettier": "3.4.0",
    "husky": "6.0.0",
    "lint-staged": "11.0.0",
    "prettier": "2.3.0",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.4"
  },
  "dependencies": {
    "@types/express": "^4.17.11",
    "@types/morgan": "^1.9.2",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0"
  }
}